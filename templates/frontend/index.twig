{% extends "layout.twig" %}



{% block content %}
    {% for article in articles %}

    <article class="article mb-4">

        <div class="post-img">
            <a href="/post/{{ article.id }}"><img src="{{ article.image }}" alt="" class="img-fluid"></a>
        </div>

        <a href="/post/{{ article.id }}"><h2 class="title">{{ article.title }}</h2></a>


        <div class="content">
            {{ article.content|raw }}

        </div><!-- End post content -->
    </article>
    {% endfor %}
{% endblock %}